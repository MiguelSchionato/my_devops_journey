{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build C project with GCC",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/build/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}
